<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.NewsInfoMapper">

    <!--获取文章信息列表-->
    <select id="getAllNews" resultType="pojo.NewsInfo">
         select * from news where newsstatus=2
     </select>
    <!--文章审核通过-->
    <update id = "agreeByNewsId" parameterType="int">
        update newsinfo set newsstatus = 1 where newsid = #{newsid}
    </update>
    <!--文章审核不通过-->
    <update id = "refuseByNewsId" parameterType="int">
        update newsinfo set newsstatus = 0 where newsid = #{newsid}
    </update>

</mapper>


